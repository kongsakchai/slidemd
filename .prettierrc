{
	"useTabs": true,
	"tabWidth": 4,
	"semi": false,
	"singleQuote": true,
	"trailingComma": "none",
	"printWidth": 120,
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": {
				"parser": "svelte"
			}
		}
	],
	"importOrder": ["^\\$app(/.*)?$", "^\\$lib(/.*)?$", "^@slidemd(/.*)?$", "^[./]"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true
}
